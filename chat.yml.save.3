    apt: pkg=nginx state=present update_cache=true

  - name: start nginx
    service:
       name: nginx
       state: started
  - name: copy gunicorn service file
    copy:
       src: /etc/ansible/playbooks/gunicorn.service
       dest: /etc/systemd/system
